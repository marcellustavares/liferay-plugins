<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="com.liferay.portal.dynamicstorage" auto-namespace-tables="false">
	<author>Marcellus Tavares</author>
	<namespace>DynamicStorage</namespace>
	<entity name="DynamicStorageRegistry" local-service="true" remote-service="true" >
		<reference package-path="com.liferay.portal" entity="ClassName" />
		<reference package-path="com.liferay.portlet.dynamicdatamapping" entity="DDMStructure" />
	</entity>

	<entity name="DynamicStorageAppEntity" local-service="true" remote-service="false" >

		<!-- PK fields -->

		<column name="appEntityId" type="long" primary="true" />

		<!-- Other fields -->

		<column name="appId" type="long" />
		<column name="entityName" type="String" />
		<column name="DDMStructureId" type="long" />

		<!-- Finder methods -->

		<finder name="A_E" return-type="DynamicStorageAppEntity" unique="true">
			<finder-column name="appId" />
			<finder-column name="entityName" />
		</finder>
	</entity>

	<entity name="DynamicStoragePersistence" local-service="true" remote-service="true">
		<reference package-path="com.liferay.portlet.dynamicdatamapping" entity="DDMStructure" />
	</entity>
</service-builder>